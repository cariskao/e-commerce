//// responsive-stylus-mixins ////
RWD-below($width)
  $width = $width - 1
  media = 'all and (max-width: %s)' % $width
  @media media
    {block}

RWD-above($width)
  media = 'all and (min-width: %s)' % $width
  @media media
    {block}

RWD-between($min-width, $max-width)
  $max-width = $max-width - 1
  media = 'all and (min-width: %s) and (max-width: %s)' % ($min-width $max-width)
  @media media
    {block}